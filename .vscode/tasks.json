{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 kompiluj aktywny plik",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/IndexBuffer.cpp",
                "${workspaceFolder}/src/Renderer.cpp",
                "${workspaceFolder}/src/Shader.cpp",
                "${workspaceFolder}/src/Texture.cpp",
                "${workspaceFolder}/src/VertexArray.cpp",
                "${workspaceFolder}/src/VertexBuffer.cpp",
                "${workspaceFolder}/src/VertexBufferLayout.cpp",
                "${workspaceFolder}/src/vendor/stb_image/stb_image.cpp",
                "-o",
                "${workspaceFolder}/src/main",
                "-lglfw",
                "-lGLEW",
                "-lGL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Zadanie wygenerowane przez debuger."
        }
    ],
    "version": "2.0.0"
}
